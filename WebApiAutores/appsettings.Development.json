{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Nivel a partir del cual se guardan los logs 
      "WebApiAutores" : "Warning", // Regla específica para NameSpace
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "connectionStrings": {
    "defaultConnection": "Data Source=(localdb)\\mssqllocaldb;Initial Catalog=CursoWebApis;Integrated Security = True"
    //localdb es un proveedor de BBDD que se instala con VS Studio 
    //Initial Catalog = Nombre de la BBDD 
    //Integrated Security = True -> Utiliza las credenciales de Windows, en False -> username y password
  }
}
